#!/bin/bash

# This script is entry for piweb

PiWeb=/opt/psapps/piweb

run_noip2() {
    NOIP2=/usr/local/bin/noip2
    if [ -e "$NOIP2" ] ; then
        killall -9 noip2
        sleep 0.5
        /usr/local/bin/noip2
    fi
}

msg() {
	echo -e "$1"
}

usage() {
	msg "Usage : piweb <cmd> [...]"
	msg "\t<cmd>"
	msg "\tpiweb start [--daemon]            start a piweb"
    msg "\tpiweb stop                        stop a piweb"
}

CMD=$1
shift

pushd $PiWeb

source venv/bin/activate
case "$CMD" in
	start)
        run_noip2
		sg psapps -c "./piweb.py $*" &
        echo "Started piweb"
		;;
    stop)
        PID=`ps xa | grep piweb.py | grep python | xargs | cut -d\  -f 1`
        [ -n "$PID" ] && sg psapps -c "kill -INT $PID"
        echo "Stopped piweb"
        ;;
	*)
		usage
		;;
esac

popd
